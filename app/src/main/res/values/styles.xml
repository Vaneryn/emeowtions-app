<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text -->
    <style name="CustomToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/archivo_bold</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <!-- HeadingText -->
    <style name="HeadingText1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/archivo</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="HeadingText1.SemiBold" parent="HeadingText1">
        <item name="android:fontFamily">@font/archivo_semibold</item>
    </style>
    <style name="HeadingText1.Bold" parent="HeadingText1">
        <item name="android:fontFamily">@font/archivo_bold</item>
    </style>
    <style name="HeadingText2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/archivo</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">@dimen/text_medium_2</item>
    </style>
    <style name="HeadingText2.SemiBold" parent="HeadingText2">
        <item name="android:fontFamily">@font/archivo_semibold</item>
    </style>
    <style name="HeadingText2.Bold" parent="HeadingText2">
        <item name="android:fontFamily">@font/archivo_bold</item>
    </style>
    <style name="HeadingText3" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/archivo</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">@dimen/text_medium_1</item>
    </style>
    <style name="HeadingText3.SemiBold" parent="HeadingText3">
        <item name="android:fontFamily">@font/archivo_semibold</item>
    </style>
    <style name="HeadingText3.Bold" parent="HeadingText3">
        <item name="android:fontFamily">@font/archivo_bold</item>
    </style>
    <!-- BodyText -->
    <style name="BodyText1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">@dimen/text_medium_1</item>
    </style>
    <style name="BodyText1.Medium" parent="BodyText1">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
    <style name="BodyText1.SemiBold" parent="BodyText1">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
    <style name="BodyText2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">@dimen/text_small_3</item>
    </style>
    <style name="BodyText2.Medium" parent="BodyText2">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
    <style name="BodyText3" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">@dimen/text_small_2</item>
    </style>
    <style name="BodyText3.Medium" parent="BodyText3">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <!-- Button -->
    <style name="PrimaryButton" parent="TextAppearance.AppCompat">
        <item name="android:backgroundTint">@color/primary_400</item>
        <item name="android:fontFamily">@font/inter_tight_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SecondaryButton" parent="TextAppearance.AppCompat">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:fontFamily">@font/inter_tight_semibold</item>
        <item name="strokeColor">@color/secondary_button_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/clickable_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Image -->
    <style name="roundedRectangleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Inputs -->
    <style name="searchBar" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="startIconDrawable">@drawable/baseline_search_24</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">40dp</item>
        <item name="boxCornerRadiusTopEnd">40dp</item>
        <item name="boxCornerRadiusBottomStart">40dp</item>
        <item name="boxCornerRadiusBottomEnd">40dp</item>
    </style>
    <style name="messageBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
    </style>
</resources>