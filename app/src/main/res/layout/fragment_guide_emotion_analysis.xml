<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.user.GuideEmotionAnalysisFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Emotions Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_300"
                android:orientation="vertical"
                android:padding="@dimen/padding_screen_edge">

                <TextView
                    style="@style/HeadingText1.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_2"
                    android:text="@string/emotions"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_2"
                        android:text="@string/one"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_1"
                        android:text="Happy"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_2"
                        android:text="@string/two"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/neutral"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_2"
                        android:text="@string/three"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/angry"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_2"
                        android:text="@string/four"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scared"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Modes Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_300"
                android:orientation="vertical"
                android:padding="@dimen/padding_screen_edge">

                <TextView
                    style="@style/HeadingText1.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_2"
                    android:text="@string/modes"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_2"
                        android:text="@string/one"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_1"
                        android:text="@string/upload"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_2"
                        android:text="@string/two"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_1"
                        android:text="@string/camera"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Upload -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_screen_edge">

                <TextView
                    style="@style/HeadingText1.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_2"
                    android:text="@string/upload" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_1"
                        android:text="@string/one" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_2"
                        android:justificationMode="inter_word"
                        android:text="@string/guide_upload_step1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_1"
                        android:text="@string/two" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_2"
                        android:justificationMode="inter_word"
                        android:text="@string/guide_upload_step2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_1"
                        android:text="@string/three" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_2"
                        android:justificationMode="inter_word"
                        android:text="@string/guide_upload_step3" />

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Camera -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_screen_edge">

                <TextView
                    style="@style/HeadingText1.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small_2"
                    android:text="@string/camera" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_1"
                        android:text="@string/one" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_2"
                        android:justificationMode="inter_word"
                        android:text="@string/guide_camera_step1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_1"
                        android:text="@string/two" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_2"
                        android:justificationMode="inter_word"
                        android:text="@string/guide_camera_step2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_small_1"
                        android:text="@string/three" />

                    <TextView
                        style="@style/BodyText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small_2"
                        android:justificationMode="inter_word"
                        android:text="@string/guide_camera_step3" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>