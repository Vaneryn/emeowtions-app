<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small_1"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:padding="1dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vet_clinic_registration_holder_body"
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small_2">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_clinic_logo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@color/primary_200"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_local_hospital_24"
                app:shapeAppearanceOverlay="@style/roundedRectangleImageView"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_small_2">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/HeadingText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    tools:text="Clinic Name" />

                <TextView
                    android:id="@+id/txt_address"
                    style="@style/BodyText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_1"
                    android:fadeScrollbars="false"
                    android:lines="3"
                    android:scrollbars="vertical"
                    tools:text="0, Lorong Kucing 1, 11900 Bayan Lepas, Penang" />

                <TextView
                    android:id="@+id/txt_updated_date"
                    style="@style/BodyText3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_small_2"
                    android:layout_gravity="end"
                    tools:text="1 Jan 2024" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>